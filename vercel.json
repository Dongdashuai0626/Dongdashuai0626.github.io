{
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/blog$",
      "dest": "/blog.html"
    },
    {
      "src": "^/hobbies$",
      "dest": "/hobbies.html"
    },
    {
      "src": "^/photography$",
      "dest": "/photography.html"
    },
    {
      "src": "^/photography-fuzhou$",
      "dest": "/photography-fuzhou.html"
    },
    {
      "src": "^/sitemap$",
      "dest": "/sitemap.html"
    },

    {
      "src": "^/(.+)\\.html$",
      "status": 301,
      "headers": {
        "Location": "/$1"
      }
    },
    {
      "src": "^/(.*)$",
      "dest": "/$1.html",
      "continue": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
